{
  "name": "mufg-usage-details-mailbot",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --ext .js,.ts . --fix",
    "build": "tsc --outDir dist",
    "start": "npx ts-node -r ./tsconfig-paths-bootstrap.js src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:main": "jest --config jest.main.config.js",
    "test:main:coverage": "jest --config jest.main.config.js --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:coverage": "jest --config jest.integration.config.js --coverage",
    "test:all": "npm run test && npm run test:integration",
    "docker:build:cloud": "docker build --platform linux/amd64 -t gcr.io/mufg-usage-details-mailbot/rocp .",
    "docker:push": "docker push gcr.io/mufg-usage-details-mailbot/rocp",
    "gcloud:config": "gcloud config set project mufg-usage-details-mailbot && gcloud auth configure-docker && gcloud auth configure-docker asia-northeast1-docker.pkg.dev",
    "gcloud:deploy": "gcloud run deploy rocp --image gcr.io/mufg-usage-details-mailbot/rocp --platform managed --region asia-northeast1 --allow-unauthenticated --min-instances=1",
    "auth": "npm run gcloud:config",
    "deploy": "npm run build && npm run docker:build:cloud && npm run docker:push && npm run gcloud:deploy",
    "clone:firestore": "npx ts-node scripts/clone-firestore-data.ts",
    "clone:firestore:dry": "npx ts-node scripts/clone-firestore-data.ts --dry-run",
    "clone:firestore:clear": "npx ts-node scripts/clone-firestore-data.ts --clear",
    "clone:firestore:test": "npx ts-node scripts/clone-firestore-data.ts --test-connection",
    "clone:firestore:explore": "npx ts-node scripts/clone-firestore-data.ts --explore",
    "clone:firestore:reports": "npx ts-node scripts/clone-firestore-data.ts --collections=reports",
    "clone:firestore:details": "npx ts-node scripts/clone-firestore-data.ts --collections=details"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/encoding-japanese": "^2.2.1",
    "@types/express": "^4.17.21",
    "@types/imapflow": "^1.0.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "dotenv": "^16.4.7",
    "eslint": "^8.57.1",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "encoding-japanese": "^2.2.0",
    "express": "^4.19.2",
    "firebase-admin": "^13.2.0",
    "html-to-text": "^9.0.5",
    "imapflow": "^1.0.186",
    "inbox": "^1.1.59",
    "mailparser": "^3.7.2",
    "module-alias": "^2.2.3",
    "quoted-printable": "^1.0.1"
  },
  "_moduleAliases": {
    "@domain": "dist/src/domain",
    "@infrastructure": "dist/src/infrastructure",
    "@usecase": "dist/src/usecases",
    "@presentation": "dist/src/presentation",
    "@shared": "dist/shared"
  }
}
