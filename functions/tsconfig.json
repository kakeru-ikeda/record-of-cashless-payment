{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "@shared/*": [
        "shared/*"
      ]
    },
    "experimentalDecorators": true
  },
  "compileOnSave": true,
  "include": [
    "src",
    "../shared/**/*"
  ]
}