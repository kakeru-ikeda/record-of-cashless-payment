{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "rootDir": "..",
    "baseUrl": "..",
    "isolatedModules": true
  },
  "compileOnSave": true,
  "include": [
    "src",
    "../shared/**/*"
  ]
}