pipeline {
    agent any
    
    environment {
        // Use environment variables configured in Jenkins
        DOCKER_HUB_CREDS = credentials('dockerhub-credentials')
        SSH_CREDS = credentials('ssh-credentials')
        SERVER_HOST = 'welcome-to-sukisuki-club.duckdns.org'
        SERVER_USER = 'server'  // SSH username
    }
    
    stages {
        stage('Test Docker Hub Login') {
            steps {
                echo "Testing Docker Hub login for user: ${env.DOCKER_HUB_USER}"
                sh '''
                    echo "Attempting Docker Hub login..."
                    echo $DOCKER_HUB_CREDS_PSW | docker login -u $DOCKER_HUB_USER --password-stdin
                    echo "Docker Hub login successful!"
                    docker logout
                '''
            }
        }
        
        stage('Test SSH Connection') {
            steps {
                echo "Testing SSH connection to ${SERVER_HOST}..."
                withCredentials([sshUserPrivateKey(credentialsId: 'ssh-credentials', keyFileVariable: 'SSH_KEY')]) {
                    sh '''
                        echo "Attempting SSH connection..."
                        ssh -o StrictHostKeyChecking=no -i $SSH_KEY $SERVER_USER@$SERVER_HOST "echo 'SSH connection successful!' && hostname"
                    '''
                }
            }
        }
    }
    
    post {
        success {
            echo "All credential tests passed successfully!"
        }
        failure {
            echo "Credential tests failed. Please check your configuration."
        }
        always {
            echo "Credentials test completed."
        }
    }
}

