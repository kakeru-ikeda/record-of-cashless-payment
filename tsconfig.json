{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@domain/*": [
                "src/domain/*"
            ],
            "@infrastructure/*": [
                "src/infrastructure/*"
            ],
            "@usecase/*": [
                "src/usecases/*"
            ],
            "@interface/*": [
                "src/interface/*"
            ],
            "@shared/*": [
                "shared/*"
            ]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "lib": [
        "es2015"
    ],
    "include": [
        "src/**/*",
        "shared/**/*"
    ]
}